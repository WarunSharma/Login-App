

<%- include('header') -%>

    <div class="text-center center-div" id="login">
        <div class="container w-25 py-5 border">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span>Login for the existing user</span>
                <% if(locals.logout){%>
                    <div class="alert alert-success text-center">
                        <%= logout%>
                    </div> 
                <%}%>    
            </div>
            <form action="/route/login" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="email" name="email" class="form-control" id="" placeholder="Email" required>
                    <small class="form-text text-muted text-left">Register Email Address</small>
                </div>
    
                <div class="form-group">
                    <input type="password" name="password" class="form-control" id="" placeholder="Password" required>
                </div>
                
                <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    
            </form>
        </div>
    </div>
        
<%- include('footer') -%>
